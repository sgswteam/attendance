<h1>Course Information</h1>
<div class="row">
  <div class="col-md-6 col-xs-6 col-md-offset-3">
		<p id="notice"><%= notice %></p>

		<dl class="dl-horizontal">
		  <dt>Name:</dt>
		  <dd><%= @course.name %></dd>
		</dl>

		<dl class="dl-horizontal">
		  <dt>Title:</dt>
		  <dd><%= @course.title %></dd>
		</dl>

		<dl class="dl-horizontal">
		  <dt>Description:</dt>
		  <dd><%= @course.description %></dd>
		</dl>
	</div>
</div>
<div class="center">
	<%= link_to 'back', courses_path, class: "position-relative btn btn-default btn-float btn-cancel" %>
</div>