<h1>Course Information</h1>
<div class="row">
  <div class="col-md-6 col-xs-6 col-md-offset-3">
		<p id="notice"><%= notice %></p>

		<dl class="dl-horizontal">
		  <dt>Name:</dt>
		  <dd><%= @course.name %></dd>
		</dl>

		<dl class="dl-horizontal">
		  <dt>Title:</dt>
		  <dd><%= @course.title %></dd>
		</dl>

		<dl class="dl-horizontal">
		  <dt>Description:</dt>
		  <dd><%= @course.description %></dd>
		</dl>

		<%= link_to 'Edit', edit_course_path(@course) %> |
		<%= link_to 'Back', courses_path %>
	</div>
</div>