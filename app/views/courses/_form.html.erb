<div class="row">
  <div class="col-md-6 col-xs-6 col-md-offset-3">
    <%= form_with(model: course, local: true) do |form| %>
      <% if course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

          <ul>
          <% course.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :course_name %>
      </div>

       <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :course_title %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, :cols => 30, :rows => 10 %>
      </div>

      <div class="field">
        <%= form.label :name %>
        <%= form.select :user_id, User.all.map{ |u| [u.name, u.id]}, {:prompt => "select"} %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>